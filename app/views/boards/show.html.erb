<div>
  <div>
    <h1>
      <%= @the_board.name %>
    </h1>

   <div>
  

<hr>

<form action="/insert_post" method="post">
<div>
    <label for="title_field">
      Title
    </label>
    <input type="text" id="title_field" name="query_title">
</div>

<div>
    <label for="body_field">
      Body
    </label>
    <textarea id="body_field" name="query_body" cols="30" rows="10"></textarea>
</div>

<div>
    <label for="expires_on_field">
      Expires on
    </label>
    <input type="date" id="expires_on_field" name="query_expires_on">
</div>

<div>
    <label for="board_id_field">
    Board id
    </label>
    <input type="text" id="board_id_field" name="query_board_id" value="<%= @the_board.id %>">
</div>

  <button>
    Add post
  </button>
</form>


<h2>Active posts</h2>

<% matching_posts = Post.where({ :board_id => @the_board.id }) %>

<table border = "1">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Posted on</th>
    <th>Expired on</th>
  </tr>

<% matching_posts.each do |a_post| %>
<tr>
    <td> <%= a_post.title %> </td>
    <td> <%= a_post.body %> </td>
    <td> <%= a_post.created_at %> </td>
    <td> <%= a_post.expires_on %> </td>
</tr>
<% end %>
</table>
